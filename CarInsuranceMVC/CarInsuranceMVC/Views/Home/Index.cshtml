@{
    ViewBag.Title = "Lets Get Started";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="card-body">
    @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
    {
        <div class="row no-gutters">

            <div class="form-group col-md-12">
                <label>First Name:</label>
                <input name="FirstName" type="text" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Last Name:</label>
                <input name="LastName" type="text" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Email Address:</label>
                <input name="EmailAddress" type="email" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Date of Birth:</label>
                <input name="DateOfBirth" type="date" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Car Year:</label>
                <input name="CarYear" type="number" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Car Make:</label>
                <input name="CarMake" type="text" class="form-control" required />
            </div>

            <div class="form-group col-md-12">
                <label>Car Model:</label>
                <input name="Car Model" type="text" class="form-control" required />
            </div>

            <div class="form-group col-md-12" required>
                <label>Have you ever had a DUI?</label>
                <select class="form-control" name="DUI">
                    <option>No</option>
                    <option>Yes</option>
                </select>
            </div>

            <div class="form-group col-md-12">
                <label>How many speeding tickets have you gotten?:</label>
                <input name="tickets" type="number" class="form-control" required />
            </div>

            <div class="form-group col-md-12" required>
                <label>Would you like Full Coverage or Liability?</label>
                <select class="form-control" name="coverage">
                    <option>Full Coverage</option>
                    <option>Liability</option>
                </select>
            </div>

            <div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
        </div>
    }
</div>